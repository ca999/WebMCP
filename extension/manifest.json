{
    "manifest_version": 3,
    "name": "Screenshot Automation",
    "version": "1.0",
    "description": "Captures screenshots on server command.",
    "permissions": [
        "tabs",
        "scripting",
        "alarms"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    }
}